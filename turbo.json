{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "package": {
      "dependsOn": ["^build"],
      "outputs": ["out/**"],
      "cache": false
    },
    "package:win": {
      "dependsOn": ["^build"],
      "outputs": ["out/**"],
      "cache": false
    },
    "package:mac": {
      "dependsOn": ["^build"],
      "outputs": ["out/**"],
      "cache": false
    },
    "package:linux": {
      "dependsOn": ["^build"],
      "outputs": ["out/**"],
      "cache": false
    }
  }
}
