{
  "name": "@accounting/pos-core",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --external lucide-react",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --external lucide-react --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "uuid": "^13.0.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/react": "^19.2.8",
    "@types/uuid": "^11.0.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "lucide-react": ">=0.400.0"
  }
}
